{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^([a-z_]+)$"
    },
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "birthday": {
      "type": "array",
      "items": {
        "type": "number"
      }
    },
    "rarity": {
      "type": "number",
      "enum": [5, 4, 3, 2, 1, 0]
    },
    "vision": {
      "type": "string",
      "enum": ["CRYO", "ELECTRO", "PYRO", "ANEMO", "HYDRO", "GEO"]
    },
    "weapon": {
      "type": "string",
      "enum": ["SWORD", "CLAYMORE", "POLEARM", "CATALYST", "BOW"]
    },
    "constellations": {
      "type": "array",
      "minItems": 0,
      "maxItems": 6,
      "items": {
        "type": "object",
        "properties": {
          "level": {
            "type": "number"
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        },
        "required": ["level", "title", "description"]
      }
    },
    "story": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        },
        "required": ["title", "description"]
      }
    }
  },
  "required": [
    "id",
    "name",
    "description",
    "birthday",
    "rarity",
    "vision",
    "weapon",
    "constellations",
    "story"
  ]
}
